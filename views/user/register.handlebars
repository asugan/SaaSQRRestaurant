<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/register.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="icon" type="image/x-icon" href="/img/logo.png" />
    <link
      rel="preload"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <link
      rel="preload"
      href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@6.6.6/css/flag-icons.min.css"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <title>Register | QRMenux</title>
    <meta name="description" content="QR Menux Register Page" />
    <link href="https://qrmenux.com/register" rel="canonical" />
    <link
      href="https://qrmenux.com/register"
      hreflang="x-default"
      rel="alternate"
    />
    <link href="https://qrmenux.com/register" hreflang="en" rel="alternate" />
    <link
      href="https://qrmenux.com/tr/register"
      hreflang="tr"
      rel="alternate"
    />
    <link
      href="https://qrmenux.com/fr/register"
      hreflang="fr"
      rel="alternate"
    />
    <link
      rel="preload"
      fetchpriority="high"
      as="image"
      href="/img/background.webp"
      type="image/webp"
    />
  </head>
  <body>
    <div class="vh100">
      <header>
        <a href="/">
          <img src="/img/logo.png" alt="QRMenux" />
        </a>
        <nav>
          {{#if user}}
            <div class="sections">
              <ul>
                <li
                  class="langli"
                  onmouseenter="showlang()"
                  onmouseleave="removelang()"
                ><a>Language <i class="fa-solid fa-arrow-down"></i></a>
                  <div class="langsection">
                    <div class="body">
                      <a href="/"><span class="fi fi-gb-eng"></span> English</a>
                      <a href="/tr"><span class="fi fi-tr"></span> Türkçe</a>
                      <a href="/fr"><span class="fi fi-fr"></span> Français</a>
                    </div>
                  </div>
                </li>
                <li><a href="/">Homepage</a></li>
                <li><a href="/user/dashboard">{{user.username}}</a></li>
                <li><a href="/user/dashboard">Dashboard</a></li>
                <li><a href="/user/logout">Logout</a></li>
              </ul>
            </div>
            <div class="mobilesection">
              <ul>
                <li><a href="/">Homepage</a></li>
                <li><a href="/user/dashboard">{{user.username}}</a></li>
                <li><a href="/user/dashboard">Dashboard</a></li>
                <li><a href="/user/logout">Logout</a></li>
              </ul>
            </div>
          {{else}}
            <div class="sections">
              <ul>
                <li
                  class="langli"
                  onmouseenter="showlang()"
                  onmouseleave="removelang()"
                ><a>Language <i class="fa-solid fa-arrow-down"></i></a>
                  <div class="langsection">
                    <div class="body">
                      <a href="/"><span class="fi fi-gb-eng"></span> English</a>
                      <a href="/tr"><span class="fi fi-tr"></span> Türkçe</a>
                      <a href="/fr"><span class="fi fi-fr"></span> Français</a>
                    </div>
                  </div>
                </li>
                <li><a href="/">Homepage</a></li>
                <li><a href="/register">Register</a></li>
                <li><a href="/login">Login</a></li>
              </ul>
            </div>
            <div class="mobilesection">
              <ul>
                <li><a href="/">Homepage</a></li>
                <li><a href="/register">Register</a></li>
                <li><a href="/login">Login</a></li>
              </ul>
            </div>
          {{/if}}
          <div class="hamburger">
            <i class="fas fa-hamburger"></i>
          </div>
        </nav>
      </header>

      <section class="register">
        <form action="/user/register" method="post">
          <div class="username">
            <label for="username">Username</label>
            <input type="text" name="username" />
          </div>
          <div class="password">
            <div class="pass1">
              <label for="password">Password</label>
              <input type="password" name="password" />
            </div>
            <div class="pass2">
              <label for="confimpassword">Repeat Password</label>
              <input type="password" name="confirmpassword" />
            </div>
          </div>
          <div class="email">
            <div class="email1">
              <label for="email">Email</label>
              <input type="text" name="email" />
            </div>
            <div class="email2">
              <label for="confirmemail">Repeat Email</label>
              <input type="text" name="confirmemail" />
            </div>

          </div>
          <button type="submit">Register, 4 Day Free!</button>
        </form>
        {{#if error}}
          <div class="error">
            <div onclick="kapat()" class="errorclose">
              <h1>CLOSE</h1>
            </div>
            {{#each error}}
              <h4>{{this.message}}</h4>
            {{/each}}
          </div>
        {{/if}}
        {{#if mailsend}}
          <div class="error">
            <div onclick="kapat()" class="errorclose">
              <h1>CLOSE</h1>
            </div>
            <h4>{{this.mailsend}}</h4>
          </div>
        {{/if}}
      </section>
    </div>

    <footer>
      <section>
        <div class="container">
          <div class="copyright">
            © 2023 QRMenux Yeni Mahalle, Isfendiyar Sokak, No: 10, Merkez
            Cankiri 18100, Turkey
          </div>
        </div>
      </section>
    </footer>

    <script>
      const kapat = () =>
      document.getElementsByClassName("error")[0].style.display = "none"
    </script>
    <script src="/js/hamburger.js"></script>
  </body>
</html>