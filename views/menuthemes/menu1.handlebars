<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <style>
    .menu--header{ background-color: black; }
  </style>
  <body>

    <section class="menu--header">
      <div class="container">
        <div class="row">
          <div
            class="col-xl-8 offset-xl-2 pt-2 pb-2 d-flex justify-content-between align-items-center"
          >
            <div class="row">
              <div
                class="col-lg-8 d-flex align-items-center justify-content-start"
              >
                <img
                  style="height:200px;"
                  class="img-fluid"
                  src="/images/{{menu.image}}"
                  alt=""
                />
              </div>
              <div
                class="col-lg-4 d-flex align-items-center justify-content-end"
              >
                <h1 class="text-center text-white">{{menu.Name}}</h1>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section>
      <div class="container mt-5">
        <div class="row">
          <div class="col-8 offset-2 p-0">
            <div class="buttons">
              <button
                class="btn btn-warning"
                onclick="filterfunc(this)"
              >Hepsi</button>
              {{#each menu.Kategoriler}}
                <button
                  class="btn btn-warning"
                  onclick="filterfunc(this)"
                >{{this.Name}}</button>
              {{/each}}
            </div>
          </div>
        </div>
      </div>

    </section>

    <section class="categories mt-5 mb-5">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 offset-lg-2">
            {{#each menu.Kategoriler}}
              <div class="row selectrow {{this.Name}}">
                <div
                  class="col-12 p-5 category--background"
                  style="background-image: url('/images/{{this.image}}'); background-position: center;
    background-repeat: no-repeat; background-size: cover;"
                >
                  <h1 class="text-white text-center">{{this.Name}}</h1>
                </div>
                <div
                  class="col-12 pt-3 pb-3"
                  style="background-color: black; border-bottom:2px solid white;"
                >
                  {{#each this.Urunler}}
                    <div class="uruncontainer ps-3 pe-3 {{this._id}}">
                      <div class="row">
                        <div
                          class="col-xl-4 p-0 d-flex justify-content-center align-items-center"
                        >
                          <img
                            style="max-height:180px; min-height:180px; max-width:250px; min-width:250px"
                            class="img-fluid rounded-circle"
                            src="/images/{{this.image}}"
                            alt=""
                          />
                        </div>
                        <div
                          class="col-xl-6 d-flex justify-content-center align-items-center mt-3 mt-xl-0"
                        >
                          <div class="aciklama text-center">
                            <h4 class="text-white itemname">{{this.Name}}</h4>
                            <p class="text-white">Lorem ipsum dolor sit amet
                              consectetur adipisicing elit. Similique, ipsum
                              temporibus! Laboriosam quasi ea commodi
                              dignissimos ipsum doloribus. Quia, consequatur!</p>
                            <button
                              class="{{this._id}} btn btn-md btn-warning"
                              onclick="sendid(this)"
                            >Sepete Ekle</button>
                          </div>
                        </div>
                        <div
                          class="col-xl-2 p-0 d-flex justify-content-center align-items-center"
                        >
                          <h4 class="text-white itemprice">{{this.Price}}₺</h4>
                        </div>
                      </div>
                    </div>
                  {{/each}}
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </section>

    <section>
      <div class="container mb-5">
        <div class="row">
          <div class="col-12">
            <h2 class="mt-5 text-center">Sepetim</h2>
            <div class="cart">
            </div>
            <ul class="list-group">
              <li class="list-group-item maliyet"></li>
            </ul>
            <div class="buttondiv mt-4 d-flex justify-content-center">
              <button class="btn btn-md btn-warning" onclick="submit()">Ödemeye
                Geç</button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="/js/menu.js"></script>
    <script src="/js/cart.js"></script>
  </body>
</html>