<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <style>
    .menu--header{ background-color: black; }
  </style>
  <body>
    {{!-- <h1>{{menu.Name}}</h1>

    {{#each menu.Kategoriler}}
      <h5>{{this.Name}}</h5>
      {{#each this.Urunler}}
        <h5>{{this.Name}}</h5>
      {{/each}}
    {{/each}} --}}

    <section class="menu--header">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <h1 class="text-center menu--header">{{menu.Name}}</h1>
          </div>
        </div>
      </div>
    </section>

    <section class="categories">
      <div class="container">
        <div class="row">
          <div class="col-8 offset-2">
            {{#each menu.Kategoriler}}
              <div class="row">
                <div
                  class="col-12 p-5 category--background"
                  style="background-image: url('/images/{{this.image}}'); background-position: center;
    background-repeat: no-repeat; background-size: cover;"
                >
                  <h3>{{this.Name}}</h3>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>